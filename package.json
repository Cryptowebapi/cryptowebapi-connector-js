{
  "name": "cryptowebapi-connector-js",
  "version": "3.1.0",
  "description": "A TypeScript/JavaScript wrapper for crypto web APIs with offline wallet recovery, ES modules support, and comprehensive type safety",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p tsconfig.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "demo": "node demo.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build && npm run test",
    "release": "standard-version"
  },
  "keywords": [
    "cryptowebapi",
    "crypto",
    "cryptocurrency",
    "api",
    "wrapper",
    "bitcoin",
    "ethereum",
    "blockchain",
    "typescript",
    "javascript"
  ],
  "author": "Nadir",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cryptowebapi/cryptowebapi-connector-js.git"
  },
  "bugs": {
    "url": "https://github.com/Cryptowebapi/cryptowebapi-connector-js/issues"
  },
  "homepage": "https://cryptowebapi.com",
  "dependencies": {
    "axios": "^1.6.0",
    "keccak": "^3.0.4"
  },
  "peerDependencies": {
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.7",
    "ethers": "^6.0.0",
    "js-sha3": "^0.8.0",
    "tiny-secp256k1": "^2.2.4"
  },
  "peerDependenciesMeta": {
    "ethers": {
      "optional": true
    },
    "bitcoinjs-lib": {
      "optional": true
    },
    "bip39": {
      "optional": true
    },
    "bip32": {
      "optional": true
    },
    "tiny-secp256k1": {
      "optional": true
    },
    "js-sha3": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "ethers": "^6.14.4",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.11.0"
}
